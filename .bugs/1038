         else:
             check_name = None
+        perfdata = []
         if line[0] == item:
             state = int(line[1])
             # convert to original format by joining and replacing \1 back with \n
@@ -67,7 +68,7 @@
             parts = lines[0].split("|", 1)
             output = [parts[0].strip()]
             if len(parts) > 1:
-                perfdata = parts[1].strip().split()
+                perfdata.append(parts[1].strip())
             else:
                 perfdata = []
