preamble_3() {
    # Find out what zone we are running in
    # Treat all pre-Solaris 10 systems as "global"
    if inpath zonename; then
        zonename=$(zonename)
        pszone="-z ${zonename}"
    else
        zonename="global"
        pszone="-A"
    fi
