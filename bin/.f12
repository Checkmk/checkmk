#!/bin/bash
set -e

SITE=${SITE:-$(until [ $PWD == / ]; do if [ -e .site ]; then cat .site; break; else cd ..; fi; done)}
SITE=${SITE:-$(omd sites --bare | head -n 1)}
ROOT=/omd/sites/$SITE

make
sudo install -m 755 check_mk livedump mkeventd mkeventd_open514 mkevent mkbackup mkbench cmk-update-config update_rrd_fs_names.py install_fbprophet $ROOT/bin/
sudo ln -sf check_mk $ROOT/bin/cmk
sudo chown root.omd $ROOT/bin/mkeventd_open514
sudo chmod 750 $ROOT/bin/mkeventd_open514
sudo setcap "CAP_NET_BIND_SERVICE+ep" $ROOT/bin/mkeventd_open514
echo "Installed to $ROOT/bin"

if [ -z $ONLY_COPY ]; then
    sudo omd restart $SITE mkeventd
fi
