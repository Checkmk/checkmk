properties([
    pipelineTriggers([pollSCM('H/2 * * * *')])
])

timeout(time: 12, unit: 'HOURS') {
    node('win3') {
        stage('git checkout') {
            checkout(scm)
        }
        stage('windows agent build') {
            bat 'cd agents\\wnx && call build_release.cmd'
            dir('artefacts') {
                archiveArtifacts "*"
            }
        }
    }
}
