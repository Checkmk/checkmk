def agent_activemq_arguments(params, hostname, ipaddress):
    return [
        params["servername"],
        f"{params['port']}",
        "--protocol",
        params["protocol"],
    ] + (["--piggyback"] if params.get("use_piggyback") else []) + ([
        "--username",
        params["basicauth"][0],
        "--password",
        params["basicauth"][1],
    ] if "basicauth" in params else [])


special_agent_info['activemq'] = agent_activemq_arguments
