def agent_emcvnx_arguments(params, hostname, ipaddress):
    args = []
    if params["user"] != "":
        args += ["-u", params["user"]]
    if params["password"] != "":
        args += ["-p", params["password"]]
    args += ["-i", ",".join(params["infos"])]

    args.append(ipaddress)
    return args


special_agent_info['emcvnx'] = agent_emcvnx_arguments
