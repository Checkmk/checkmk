# {
#     'port': 8080,
#     'password': 'marchingband',
#     'infos': ['jobs', 'builds'],
#     'user': 'kitty'
# }


def agent_jenkins_arguments(params, hostname, ipaddress):
    args = []

    args += ["-P", params["protocol"]]
    args += ["-m", ' '.join(params["infos"])]
    args += ["-u", params["user"]]
    args += ["-s", passwordstore_get_cmdline("%s", params["password"])]

    if "port" in params:
        args += ["-p", params["port"]]

    args += [params["instance"]]

    return args


special_agent_info['jenkins'] = agent_jenkins_arguments
