def agent_kubernetes_arguments(params, _hostname, ipaddress):
    args = ' --token ' + quote_shell_string(params["token"])

    if "port" in params:
        args += " --port " + quote_shell_string(str(params["port"]))

    if params.get('no-cert-check', False):
        args += " --no-cert-check"

    if "url-prefix" in params:
        args += " --url-prefix " + quote_shell_string(params["url-prefix"])

    if "path-prefix" in params:
        args += " --path-prefix " + quote_shell_string(params["path-prefix"])

    args += " " + quote_shell_string(ipaddress)
    return args


special_agent_info['kubernetes'] = agent_kubernetes_arguments
