def agent_prism_arguments(params, hostname, ipaddress):
    arglist = ['--server', ipaddress]

    for param in ['port', 'username', 'password']:
        if param in params:
            arglist += ['--%s' % param, "%s" % params[param]]

    return arglist


special_agent_info['prism'] = agent_prism_arguments
