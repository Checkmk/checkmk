# {
#     'port': 443,
#     'password': 'comein',
#     'infos': ['license_state'],
#     'user': 'itsme'
# }


def agent_splunk_arguments(params, hostname, ipaddress):
    args = []

    args += ["-P", params["protocol"]]
    args += ["-m", ' '.join(params["infos"])]
    args += ["-u", params["user"]]
    args += ["-s", passwordstore_get_cmdline("%s", params["password"])]

    if "port" in params:
        args += ["-p", params["port"]]

    if "instance" in params:
        hostname = params["instance"]

    args += [hostname]

    return args


special_agent_info['splunk'] = agent_splunk_arguments
