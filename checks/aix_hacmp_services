# parsed = {
#  u'CAA': [(u'clcomd', u'caa', u'6619358', u'active'),
#           (u'clconfd', u'caa', u'10944716', u'active')],
#  u'PowerHA SystemMirror': [(u'clstrmgrES', u'cluster', u'9109590', u'active'),
#                            (u'clevmgrdES', u'cluster', u'29098102', u'active')],
