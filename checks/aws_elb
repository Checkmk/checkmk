def check_aws_elb_http_backend(item, params, parsed):
    return check_aws_http_elb(params.get("levels_backend_targets", params), parsed,
                              ['2xx', '3xx', '4xx', '5xx'], 'HTTPCode_Backend_%s')


check_info['aws_elb.http_backend'] = {
