def inventory_blade_powermod(info):
    return [ (line[0], '', '""') for line in info if line[1] == '1' ]

def check_blade_powermod(index, _no_param, info):
    for line in info:
        if line[0] == index:
            present, status, text = line[1:]
            if present != "1":
                return (2, "CRIT - Not present")
            elif status != "1":
                return (2, "CRIT - %s" % text)
            else:
                return (0, "OK - %s" % text)
    return (3, "Module %s not found in SNMP info" % index)


check_info['blade_powermod'] = (check_blade_powermod, "Power Module %s", 0, inventory_blade_powermod)
snmp_info['blade_powermod'] = ( ".1.3.6.1.4.1.2.3.51.2.2.4.1.1", [ 1, 2, 3, 4 ]) # BLADE-MIB

snmp_scan_functions['blade_powermod'] = \
    lambda oid: re.match('BladeCenter( Advanced)* Management Module', oid(".1.3.6.1.2.1.1.1.0"))
