    ".1.3.6.1.4.1.2606.4.2",
    [
        "3",  # cmcTcUnit1OutputTable
        "4",  # cmcTcUnit2OutputTable
        "5",  # cmcTcUnit3OutputTable
        "6",  # cmcTcUnit4OutputTable
    ],
    [
        "5.2.1.1",  # Index
        "5.2.1.2",  # Sensor Type
        "5.2.1.4",  # Status
        "5.2.1.5",  # Value
        "5.2.1.6",  # High
        "5.2.1.7",  # Low
        "5.2.1.8",  # Warn
        "7.2.1.2",  # Description
    ],
)

