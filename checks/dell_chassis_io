dell_chassis_io_info = ( ".1.3.6.1.4.1.674.10892.2.3.1", [
                                      "2", # drsIOMCurrStatus
                              ])

dell_chassis_io_scan =  lambda oid: oid('.1.3.6.1.2.1.1.2.0') == ".1.3.6.1.4.1.674.10892.2"

def inventory_dell_chassis_io(info):
    if info:
        return [ ( None, None ) ]

def check_dell_chassis_io(_no_item, _no_params, info):

    state_table = {
        "1" : ( "other, ", 1 ),
        "2" : ( "unknown, ", 1 ),
        "3" : ( "normal", 0 ),
        "4" : ( "nonCritical, ", 1 ),
        "5" : ( "Critical, ", 2 ),
        "6" : ( "NonRecoverable, ", 2 ),
    }
    infotext, state = state_table.get(info[0][0], ("unknown state", 3 ))

    infotext = "Status: " + infotext

    return state, infotext

check_info["dell_chassis_io"] = {
    "check_function"        : check_dell_chassis_io,
    "inventory_function"    : inventory_dell_chassis_io,
    "service_description"   : "Overall IO Module Status",
    "has_perfdata"          : False,
    "snmp_info"             : dell_chassis_io_info,
    "snmp_scan"             : dell_chassis_io_scan,
}

