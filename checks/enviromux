            "2",  # intSensorType
            "3",  # intSensorDescription
            "4",  # intSensorGroupNb
            "5",  # intSensorGroup
            "6",  # intSensorValue
            "7",  # intSensorUnit
            "8",  # intSensorUnitName
            "9",  # intSensorStatus
            "10",  # intSensorMinThreshold
            "11",  # intSensorMaxThreshold
            # These appear to only return bogus values
