#.1.3.6.1.4.1.231.2.10.2.2.10.2.3.1.5.1 "PRIMERGY RX300 S8"
#.1.3.6.1.4.1.231.2.10.2.2.10.2.3.1.7.1 "--"
#.1.3.6.1.4.1.231.2.10.2.2.10.4.1.1.11.1 "V4.6.5.4 R1.6.0 for D2939-B1x"

def inventory_fsc_sc2_info(info):
    if info:
        return [ (None, None) ]


def check_fsc_sc2_info(_no_item, _no_params, info):
    if info:
        return (0, 'Model: {0}, Serial Number: {1}, BIOS Version: {2}'.format(info[0][0], info[0][1], info[0][2]))


check_info['fsc_sc2_info'] = {
    'inventory_function'        :   inventory_fsc_sc2_info,
    'check_function'            :   check_fsc_sc2_info,
    'service_description'       :   'Server Info',
    'snmp_info'                 :   ('.1.3.6.1.4.1.231.2.10.2.2.10' , [
                                        '2.3.1.5.1',    #sc2UnitModelName
                                        '2.3.1.7.1',    #sc2UnitSerialNumber
                                        '4.1.1.11.1',   #sc2srvBiosVersion
                                    ]),
    'snmp_scan_function'        :   lambda oid: oid('.1.3.6.1.4.1.231.2.10.2.2.10.1.1.0'),
}
