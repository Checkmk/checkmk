def inventory_janitza_umg_temp(info):
    # info[0][0] is frequency, info[0][1] is first temperature reading, info[0][2] is second.
    # If the device doesn't support a reading, the element is missing from the tree. if no sensor
    # is connected, it appears to return -1000
    if len(info[0]) > 1 and int(info[0][1][0]) != -1000:
        yield "1", {}
    if len(info[0]) > 2 and int(info[0][1][0]) != -1000:
        yield "2", {}


def check_janitza_umg_temp(item, params, info):
    idx = int(item)
    if len(info[0]) > idx:
        return check_temperature(float(info[0][idx][0]) / 10.0, params)


check_info['janitza_umg_temp'] = {
    'inventory_function'      : inventory_janitza_umg_temp,
    'check_function'          : check_janitza_umg_temp,
    'service_description'     : 'Temperature External %s',
    'has_perfdata'            : True,
    'default_levels_variable' : 'janitza_umg_temp_default_levels',
    'includes'                : [ "temperature.include", ],
    'group'                   : 'temperature',
    'snmp_info'               : [
                                    (".1.3.6.1.4.1.34278", [ "6" ]), # misc
                                  ],
    'snmp_scan_function'      : lambda oid: oid(".1.3.6.1.2.1.1.2.0") in [".1.3.6.1.4.1.34278.8.6",
                                                                            ".1.3.6.1.4.1.34278.10.1"]
}

