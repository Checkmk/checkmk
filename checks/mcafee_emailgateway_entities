                "8",  # raid-state
            ],
        ),
        (
            ".1.3.6.1.4.1.1230.2.4.1.2.3.4",
            [
                "1",  # av-dat-state
                "2",  # av-eng-state
                "3",  # spam-dat-state
                "4",  # spam-eng-state
                "5",  # config-antirelay-state
                "6",  # encryption-state
                "7",  # smtp-state
                "8",  # pop3-state
                "9",  # epo-state
                "10",  # tqmserver-state
                "11",  # gti-message-state
                "12",  # gti-feedback-state
                "13",  # gti-file-state
                "14",  # rbl-state
                "15",  # rsyslog-state
                "16",  # remote-syslog-state
                "17",  # ldap-state
                "18",  # remote-ldap-state
                "19",  # snmpd-state
                "20",  # remote-dns-state
