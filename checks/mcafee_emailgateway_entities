            ".1.3.6.1.4.1.1230.2.4.1.2.3.5",
            [
                "1",  # webmc-state
                "2",  # evthandler-state
                "3",  # smtp-retryer-state
                "4",  # spam-updater-state
                "5",  # postgres-state
