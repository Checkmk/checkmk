# NOTE: Careful when replacing the *-import below with a more specific import. This can cause
# problems because it might remove variables needed for accessing discovery rulesets.
from cmk.base.check_legacy_includes.wmi import *  # pylint: disable=wildcard-import,unused-wildcard-import


def discover_msexch_availability(parsed):
    return inventory_wmi_table_total(parsed)


def check_msexch_availability(item, params, parsed):
    yield wmi_yield_raw_persec(
        parsed[""],
        item,
        "AvailabilityRequestssec",
        infoname="Requests/sec",
        perfvar="requests_per_sec",
    )


check_info["msexch_availability"] = {
    "inventory_function": discover_msexch_availability,
    "check_function": check_msexch_availability,
    "parse_function": parse_wmi_table,
    "has_perfdata": True,
    "service_description": "Exchange Availability Service",
}
