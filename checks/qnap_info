def check_qnap_info(_no_item, _no_params, info):
    out_txt = str(info[0][0]) + " -- Serial Nr.: " + str(info[0][1])
    try:
        uptime = int(info[0][2]) / 100
        out_txt += " -- Uptime: " + get_age_human_readable(uptime)
    except ValueError:
        pass
    yield 0, out_txt


check_info['qnap_info'] = {
    "inventory_function": discover_single,
    "check_function": check_qnap_info,
    "service_description": "QNAP Info",
    "snmp_info": (".1.3.6.1", ["2.1.1.1.0", "2.1.47.1.1.1.1.11.1", "2.1.25.1.1.0"]),
    "snmp_scan_function": lambda oid: "QNAP Systems" in oid('.1.3.6.1.2.1.47.1.1.1.1.12.1'),
}
