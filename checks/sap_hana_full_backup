def inventory_sap_hana_full_backup(info):
    return [(None, {})]


def check_sap_hana_full_backup(item, params, info):
    date, age_days, duration, backup_state = info[0][:4]
    date, backup_state = map(lambda x: x.replace('"', ''), [date, backup_state])
    infotext = "Status: %s" % backup_state
    if backup_state == "running":
        return 0, infotext

    state = 0
    if backup_state != "successful":
        state = 2
    return state, '%s, Duration: %s, %s days ago' % \
           (infotext, get_age_human_readable(int(duration)), int(age_days))


check_info['sap_hana_full_backup'] = {
    'inventory_function'    : inventory_sap_hana_full_backup,
    'check_function'        : check_sap_hana_full_backup,
    'service_description'   : 'SAP HANA Full Backup',
}
