set -e

SITE=${SITE:-$(until [ "${PWD}" = / ]; do if [ -e .site ]; then
    cat .site
    break
else cd ..; fi; done)}
SITE=${SITE:-$(omd sites --bare | head -n 1)}
ROOT=/omd/sites/$SITE
test -d "${ROOT}" || exit 1

CMK_VERSION_DIR=$(basename "$(readlink "$ROOT"/version)")
# CMK_VERSION=${CMK_VERSION_DIR%.*}
CMK_EDITION=${CMK_VERSION_DIR##*.}

echo "Update site $SITE..."

PYTHON3_PATHS=(
    .
    automations
    base
    bi
    checkengine
    ec
    fields
    gui
    notification_plugins
    plugins
    post_rename_site
    special_agents
    update_config
    utils
    inventory
)

echo "Copy check files (checks from the CRE are special: remove vanished files)..."
# legacy checks:
TARGET="${ROOT}/share/check_mk/checks/"
# NOTE: The -a flag is equivalent to -rlptgoD, but we do *not* want -t, as it
# would screw up our include caching mechanism!
rsync \
    -rlD \
    --exclude="__pycache__" \
    --exclude ".mypy_cache" \
    --delete-after "base/legacy_checks/" \
    "${TARGET}"
find "${TARGET}" -iname "*.py" -type f | sed -e 'p;s/.py$//' | xargs --max-args=2 mv

echo "Copy files..."
rsync \
    --exclude="*.pyc" \
    --exclude="flycheck*" \
    --exclude="base/legacy_checks" \
    --exclude="__pycache__" \
    --exclude ".mypy_cache" \
    --delete-after \
    -rlDR \
    "${PYTHON3_PATHS[@]}" \
    "$ROOT"/lib/python3/cmk/

# Transform required packages to namespace package
grep --recursive --files-with-matches --null 'check_mk.make: do-not-deploy' "${ROOT}/lib/python3/cmk" | xargs --null rm -f

# cloud stuff is only in cloud (not sure if this suffices to fake a "real" cloud).
if [ "$CMK_EDITION" != "cloud" ]; then
    find "${ROOT}/lib/python3" -regex '.*/cloud*' -print0 | xargs --null rm -rf
fi

# Edition hierarchy: community < pro < ultimate < ultimatemt
# cloud includes pro and ultimate functionality
if [ "$CMK_EDITION" != "ultimatemt" ]; then
    find "${ROOT}/lib/python3" -regex '.*/ultimatemt*' -print0 | xargs --null rm -rf
    if [ "$CMK_EDITION" != "ultimate" ] && [ "$CMK_EDITION" != "cloud" ]; then
        find "${ROOT}/lib/python3" -regex '.*/ultimate*' -print0 | xargs --null rm -rf
        if [ "$CMK_EDITION" != "pro" ]; then
            find "${ROOT}/lib/python3" -regex '.*/pro*' -print0 | xargs --null rm -rf
        fi
    fi
fi

# Restore site version after .f12
# sed -i "s|^__version__.*$|__version__ = \"$CMK_VERSION\"|g" "$ROOT"/lib/python3/cmk/ccc/version.py

# Make the target a ultimatemt again if it was before after replacing the version.py from the git
if [ "$CMK_EDITION" = "ultimatemt" ]; then
    echo "Make the target ultimatemt..."
    sed -i "/^def edition() -> Edition:/{n;n;s/.*/        return Edition.ULTIMATEMT/}" "$ROOT/lib/python3/cmk/ccc/version.py"
fi

if [ -z "${ONLY_COPY}" ]; then
    (
        cd "$ROOT"/lib/python3/cmk
        "$ROOT"/bin/python3 -m compileall -qq "${PYTHON3_PATHS[@]}"
    )
fi
