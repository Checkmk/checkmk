#!/bin/bash
set -e

SITE=${SITE:-$(until [ "$PWD" == / ]; do if [ -e .site ]; then
    cat .site
    break
else cd ..; fi; done)}
SITE=${SITE:-$(omd sites --bare | head -n 1)}

(cd ../../non-free/packages/cmc-protocols && bash .f12)
(cd .. && bash .f12)

if [ -z "$ONLY_COPY" ]; then
    sudo --login -u "$SITE" -- bash -c "omd restart automation-helper"
fi
