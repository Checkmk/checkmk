#!/bin/bash
set -e

SITE=${SITE:-$(until [ "$PWD" == / ]; do if [ -e .site ]; then
    cat .site
    break
else cd ..; fi; done)}
SITE=${SITE:-$(omd sites --bare | head -n 1)}
ROOT=/omd/sites/$SITE
GIT_ROOT=$(git rev-parse --show-toplevel)

echo "Copy CRE files..."
sudo rsync \
    --exclude="*.pyc" \
    --exclude="flycheck*" \
    -aR \
    . \
    "$ROOT"/lib/python3/cmk/gui/plugins/openapi

(
    cd "$GIT_ROOT"/web/htdocs/openapi
    bash .f12
)

if [ -z "$ONLY_COPY" ]; then
    if [ "$SITE" != - ]; then
        sudo omd reload "$SITE" apache
    fi
fi
