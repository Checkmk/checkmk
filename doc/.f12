set -e

SITE=${SITE:-$(until [ "${PWD}" = / ]; do if [ -e .site ]; then
    cat .site
    break
else cd ..; fi; done)}
SITE=${SITE:-$(omd sites --bare | head -n 1)}
ROOT=/omd/sites/$SITE
test -d "${ROOT}" || exit 1

echo "TARGET: $ROOT/share/check_mk/checks"
rsync -rlD --delete-after ./ "$ROOT/share/doc/check_mk/"
