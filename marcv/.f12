set -e

SITE=${SITE:-$(until [ $PWD == / ]; do if [ -e .site ]; then cat .site; break; else cd ..; fi; done)}
SITE=${SITE:-$(omd sites --bare | head -n 1)}

REPO_PATH=$(dirname $(dirname $(realpath "$0")))
"$REPO_PATH/scripts/run-pipenv" run python3 setup.py bdist_wheel

if [ -z $ONLY_COPY ]; then
    sudo omd stop $SITE marcv
fi

sudo "/omd/sites/$SITE/bin/python3" -m pip uninstall -y marcv
sudo "/omd/sites/$SITE/bin/python3" -m pip install "$PWD/dist/marcv-0.0.0-py3-none-any.whl"

if [ -z $ONLY_COPY ]; then
    sudo omd start $SITE marcv
fi
