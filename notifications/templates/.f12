set -e

SITE=${SITE:-$(until [ "${PWD}" = / ]; do if [ -e .site ]; then
    cat .site
    break
else cd ..; fi; done)}
SITE=${SITE:-$(omd sites --bare | head -n 1)}
ROOT=/omd/sites/$SITE

TARGET="${ROOT}/share/check_mk/notifications/templates/"
mkdir -p "$TARGET"
rsync \
    -vrlD \
    --exclude="__pycache__" \
    --exclude ".mypy_cache" \
    . \
    "${TARGET}"
