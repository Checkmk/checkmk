<!DOCTYPE html>
<table width="100%"
       style="margin:0 auto;
              max-width:600px;
              border-collapse:collapse">
    <tr>
        <td style="height:20px;
                   line-height:20px;
                   font-size:0;
                   mso-line-height-rule:exactly">&nbsp;</td>
    </tr>
    <tr>
        <td style="font-size:18px; font-weight:600; text-align:left; padding:0;">
            <img class="section-icon"
                 src="cid:graph.png"
                 alt="Graph Icon"
                 width="18"
                 height="19"
                 style="display:inline-block;
                        vertical-align:middle;
                        width:18px;
                        height:19px;
                        border:0;
                        background-color:#ffffff;
                        color-scheme:light dark;
                        supported-color-schemes:light dark;
                        mso-line-height-rule:exactly" />
            <span style="vertical-align: middle;">Graph</span>
        </td>
    </tr>
    <tr>
        <td style="padding-top:10px;">
            {% if graphs %}
                {% for graph in graphs %}
                    <img src="cid:{{ graph | default("placeholder.png") }}"
                         alt="Graph Image"
                         width="600"
                         height="293"
                         style="display:block;
                                width:100%;
                                max-width:600px;
                                height:auto" />
                {% endfor %}
            {% else %}
                <p style="font-size:14px; color:#2c3843;">No graph available</p>
            {% endif %}
        </td>
    </tr>
</table>
{% if data.PARAMETER_URL_PREFIX_1 | default(false) and data.GRAPH_URL | default(false) %}
    <table width="100%"
           style="margin:0 auto;
                  max-width:600px;
                  border-collapse:collapse">
        <tr>
            <td style="padding-top:10px;">
                <a href="{{ data.GRAPH_URL }}"
                   style="display:block;
                          height:24px;
                          font-size:16px;
                          color:#2c3843;
                          line-height:24px;
                          text-decoration:none">View graph to inspect</a>
            </td>
        </tr>
    </table>
{% endif %}
