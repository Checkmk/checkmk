load("@rules_foreign_cc//foreign_cc:defs.bzl", "configure_make")

filegroup(
    name = "all_srcs",
    srcs = glob(
        ["**/*"],
        exclude = ["bazel-*"],
    ),
)

configure_make(
    name = "lcab",
    args = ["-j4"],
    env = {"DESTDIR": "/"},
    install_prefix = "lcab_dir",
    lib_source = ":all_srcs",
    out_bin_dir = "bin",
    out_binaries = [
        "lcab",
    ],
    out_shared_libs = [
    ],
)
