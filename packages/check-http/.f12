set -e

./run --build

SITE=${SITE:-$(until [ "${PWD}" = "/" ]; do if [ -e .site ]; then
    cat .site
    break
else cd ..; fi; done)}
SITE=${SITE:-$(omd sites --bare | head -n 1)}
ROOT=/omd/sites/$SITE

if [ -d "$ROOT" ]; then
    install -v -m 755 target/release/check_http "$ROOT/lib/nagios/plugins/check_httpv2"
fi
