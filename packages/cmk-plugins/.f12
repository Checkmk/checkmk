set -e

SITE=${SITE:-$(until [ "${PWD}" = / ]; do if [ -e .site ]; then
    cat .site
    break
else cd ..; fi; done)}
SITE=${SITE:-$(omd sites --bare | head -n 1)}
ROOT=/omd/sites/$SITE
test -d "${ROOT}" || exit 1

WHEEL_TARGETS=$(bazel query --ui_event_filters=-info --noshow_progress 'filter(":wheel-for-f12-\w*$", //packages/cmk-plugins/...)')
# shellcheck disable=SC2086
bazel build $WHEEL_TARGETS

WHEELS=()
for target in $WHEEL_TARGETS; do
    WHEEL_PATH=$(bazel cquery "$target" --output=starlark --starlark:expr="target.files.to_list()[0].path")
    WHEELS+=("$(bazel info workspace)/$WHEEL_PATH")
done

# pip installs the package in the user directory in case of missing permissions
# this might be surprising and hard to spot, so we force the global installation
# hint: use `omd-setup-version-for-dev` to fix permissions of the checkmk site.
export PYTHONNOUSERSITE=1

"${ROOT}/bin/python3" -m pip install \
    --no-deps \
    --upgrade \
    --force-reinstall \
    --isolated \
    "${WHEELS[@]}"
