{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "title": "ai_button",
  "properties": {
    "button_text": { "type": "string" },
    "template": {
      "anyOf": [{ "$ref": "#/$templates/explain_this_issue" }]
    },
    "teleport": { "type": "string" },
    "user_id": { "type": "string" }
  },
  "required": ["button_text", "template", "user_id"],
  "$defs": {
    "ai_template": {
      "type": "object",
      "properties": {
        "title": { "type": "string" }
      },
      "required": ["title"]
    }
  },
  "$templates": {
    "explain_this_issue": {
      "allOf": [{ "$ref": "#/$defs/ai_template" }],
      "type": "object",
      "properties": {
        "id": { "const": "explain-this-issue" },
        "data": { "$ref": "#/$templateData/explain_this_issue_data" }
      },
      "required": ["id", "data"]
    }
  },
  "$templateData": {
    "explain_this_issue_data": {
      "type": "object",
      "properties": {
        "host_name": { "type": "string" },
        "service_name": { "type": "string" },
        "status": { "enum": ["Critical", "Warning", "OK"] }
      },
      "required": ["host_name", "service_name", "status"]
    }
  }
}
