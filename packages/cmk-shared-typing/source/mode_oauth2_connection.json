{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "title": "oauth2_connection_config",
  "properties": {
    "urls": { "$ref": "#/$def/oauth2_urls" }
  },
  "required": ["urls"],
  "$def": {
    "oauth2_urls": {
      "type": "object",
      "properties": {
        "redirect": { "type": "string" },
        "back": { "type": "string" },
        "microsoft_entra_id": {
          "$ref": "#/$urls/microsoft_entra_id_urls"
        }
      },
      "required": ["microsoft_entra_id", "redirect", "back"]
    }
  },
  "$urls": {
    "microsoft_entra_id_urls": {
      "type": "object",
      "properties": {
        "global_": {
          "$ref": "#/authority_urls"
        },
        "china": {
          "$ref": "#/authority_urls"
        }
      },
      "required": ["global_", "china"]
    }
  },
  "authority_urls": {
    "type": "object",
    "properties": {
      "base_url": {
        "type": "string"
      }
    },
    "required": ["base_url"]
  }
}
