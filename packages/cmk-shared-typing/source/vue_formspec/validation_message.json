{
    "$schema": "https://json-schema.org/draft/2019-09/schema",
    "type": "object",
    "$defs": {
        "validation_message": {
            "type": "object",
            "properties": {
                "location": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "message": {
                    "type": "string"
                },
                "invalid_value": {}
            },
            "required": ["location", "message", "invalid_value"]
        }
    }
}
