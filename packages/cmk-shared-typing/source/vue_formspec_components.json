{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "type": "object",
  "properties": {
    "all_schemas": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/vue_schema"
      }
    }
  },
  "$defs": {
    "vue_base": {
      "type": "object",
      "properties": {
        "title": {
          "type": "string",
          "default": "Title"
        },
        "help": {
          "type": "string"
        },
        "validators": {
          "type": "array",
          "items": {
            "type": "object"
          }
        }
      },
      "required": ["title", "help"]
    },
    "vue_integer": {
      "type": "object",
      "properties": {
        "vue_type": {
          "const": "integer"
        },
        "label": {
          "type": "string"
        },
        "unit": {
          "type": "string"
        }
      },
      "allOf": [
        {
          "$ref": "#/$defs/vue_base"
        }
      ]
    },
    "vue_float": {
      "type": "object",
      "properties": {
        "vue_type": {
          "const": "float"
        },
        "label": {
          "type": "string"
        },
        "unit": {
          "type": "string"
        }
      },
      "allOf": [
        {
          "$ref": "#/$defs/vue_base"
        }
      ]
    },
    "vue_legacy_valuespec": {
      "type": "object",
      "properties": {
        "vue_type": {
          "const": "legacy_valuespec"
        }
      },
      "required": ["valuespec"],
      "allOf": [
        {
          "$ref": "#/$defs/vue_base"
        }
      ]
    },
    "vue_text": {
      "type": "object",
      "properties": {
        "vue_type": {
          "const": "text"
        },
       "placeholder": {
          "type": "string"
        }
      },
      "allOf": [
        {
          "$ref": "#/$defs/vue_base"
        }
      ]
    },
    "vue_list": {
      "type": "object",
      "properties": {
        "vue_type": {
          "const": "list"
        },
        "add_text": {
          "type": "string"
        },
        "vue_schema": {
          "$ref": "#/$defs/vue_schema"
        }
      },
      "required": ["template"],
      "allOf": [
        {
          "$ref": "#/$defs/vue_base"
        }
      ]
    },
    "vue_dictionary_element": {
      "type": "object",
      "properties": {
        "ident": {
          "type": "string"
        },
        "required": {
          "type": "boolean"
        },
        "default_value": {
          "type": "any"
        },
        "vue_schema": {
          "$ref": "#/$defs/vue_schema"
        }
      },
      "required": ["ident", "required", "vue_schema", "default_value"]
    },
    "vue_dictionary": {
      "type": "object",
      "properties": {
        "vue_type": {
          "const": "dictionary"
        },
        "elements": {
            "type": "array",
            "items": {
              "$ref": "#/$defs/vue_dictionary_element"
            }
       }
      },
      "required": ["elements"],
      "allOf": [
        {
          "$ref": "#/$defs/vue_base"
        }
      ]
    },
    "vue_schema": {
      "discriminator": {
        "propertyName": "vue_type"
      },
      "oneOf": [
        {
          "$ref": "#/$defs/vue_integer"
        },
        {
          "$ref": "#/$defs/vue_float"
        },
        {
          "$ref": "#/$defs/vue_text"
        },
        {
          "$ref": "#/$defs/vue_dictionary"
        },
        {
          "$ref": "#/$defs/vue_list"
        },
        {
          "$ref": "#/$defs/vue_legacy_valuespec"
        }
      ],
      "required": ["vue_type"]
    }
  }
}
