set -e

./run --build

SITE=${SITE:-$(until [ "${PWD}" = "/" ]; do if [ -e .site ]; then
    cat .site
    break
else cd ..; fi; done)}
SITE=${SITE:-$(omd sites --bare | head -n 1)}
ROOT=/omd/sites/$SITE
test -d "$ROOT" || exit 1

# Simply copying the library can cause a running NEB/CMC to crash.
install --verbose --mode 644 ../../bazel-bin/packages/livestatus/liblivestatus.so "$ROOT/lib/liblivestatus.so.0.1"
patchelf --set-rpath "\$ORIGIN/../lib" "$ROOT/lib/liblivestatus.so.0.1"

test -z "$ONLY_COPY" || exit 0
sudo --login -u "$SITE" -- bash -c "omd restart nagios; omd restart cmc"
