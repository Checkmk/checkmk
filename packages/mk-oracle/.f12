set -e

SITE=${SITE:-$(until [ "${PWD}" = / ]; do if [ -e .site ]; then
    cat .site
    break
else cd ..; fi; done)}
SITE=${SITE:-$(omd sites --bare | head -n 1)}
ROOT=/omd/sites/$SITE
test -d "${ROOT}" || exit 1

TARGET=":all"
bazel build "${TARGET}"
EXECUTION_ROOT=$(bazel info execution_root)
for FILE in $(bazel cquery --output=files "${TARGET}"); do
    FULL_PATH=${EXECUTION_ROOT}/${FILE}
    BASENAME=${FILE##*/}
    case "${BASENAME}" in
        mk-oracle)
            install --mode 755 "${FULL_PATH}" "${ROOT}/lib/python3/cmk/plugins/oracle/agents/mk-oracle"
            ;;
    esac
done

test -z "${ONLY_COPY}" || exit 0
