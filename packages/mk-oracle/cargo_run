#  imitates agent behavior: setup LD_LIBRARY_PATH to include the runtime library
path_to_runtime="${PWD}/runtimes/oci_light_lin_x64.zip"
export LD_LIBRARY_PATH=${path_to_runtime}:${LD_LIBRARY_PATH}
cargo "$@"
