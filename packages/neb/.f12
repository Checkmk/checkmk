set -e

./run --build

SITE=${SITE:-$(until [ "${PWD}" = "/" ]; do if [ -e .site ]; then
    cat .site
    break
else cd ..; fi; done)}
SITE=${SITE:-$(omd sites --bare | head -n 1)}
ROOT=/omd/sites/$SITE
test -d "$ROOT" || exit 1

install --verbose ../../bazel-bin/packages/neb/libneb_shared.so "$ROOT/lib/mk-livestatus/livestatus.o"
patchelf --set-rpath "\$ORIGIN/../lib" "$ROOT/lib/mk-livestatus/livestatus.o"

test -z "$ONLY_COPY" || exit 0
sudo --login -u "$SITE" -- bash -c "omd restart nagios"
