set -e

./run --build-all

SITE=${SITE:-$(until [ "${PWD}" = "/" ]; do if [ -e .site ]; then
    cat .site
    break
else cd ..; fi; done)}
SITE=${SITE:-$(omd sites --bare | head -n 1)}
ROOT=/omd/sites/$SITE

(cd ../../packages/livestatus && ONLY_COPY=1 ./.f12)

install -vD build/src/libneb.so "$ROOT/lib/mk-livestatus/livestatus.o"

if [ -z "$ONLY_COPY" ]; then
    echo "Restarting site $SITE"
    sudo omd restart "$SITE" nagios
fi
