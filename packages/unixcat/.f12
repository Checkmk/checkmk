set -e

./run --build-all

SITE=${SITE:-$(until [ "${PWD}" = "/" ]; do if [ -e .site ]; then
    cat .site
    break
else cd ..; fi; done)}
SITE=${SITE:-$(omd sites --bare | head -n 1)}
ROOT=/omd/sites/$SITE

if [ -d "$ROOT" ]; then
    install -v -m 755 build/src/unixcat "$ROOT/bin"
fi
