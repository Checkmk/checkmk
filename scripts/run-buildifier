set -e

get_bazel_files() {
    REPO_PATH="$(cd "$(dirname "$(dirname "${BASH_SOURCE[0]}")")" >/dev/null 2>&1 && pwd)"
    OMD_PATH=$REPO_PATH/omd

    # shellcheck disable=SC2086
    find $OMD_PATH \
        -type f \
        \! -path "${OMD_PATH}/build/*" -a \
        \( -name '*.bzl' \
        -o -name '*.sky' \
        -o -name BUILD.bazel \
        -o -name BUILD \
        -o -name '*.BUILD' \
        -o -name 'BUILD.*.bazel' \
        -o -name 'BUILD.*.oss' \
        -o -name WORKSPACE \
        -o -name WORKSPACE.bazel \
        -o -name WORKSPACE.oss \
        -o -name 'WORKSPACE.*.bazel' \
        -o -name 'WORKSPACE.*.oss' \
        \) -print
}

get_bazel_files | xargs buildifier "$@"
