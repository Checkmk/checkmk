    {
      "locator": "span:text-is('24X7 - Always')",
      "action": "click"
    }
  ],
  "Notification period for hosts": [
    {
      "locator": "[role='textbox'][title='Select a time period']",
      "action": "click"
    },
    {
      "locator": "span:text-is('24X7 - Always')",
      "action": "click"
    }
  ],
  "Service period for hosts": [
    {
      "locator": "[role='textbox'][title='Select a time period']",
      "action": "click"
    },
    {
      "locator": "span:text-is('24X7 - Always')",
      "action": "click"
    }
  ],
  "Recurring downtimes for hosts": [
    {
      "locator": "input[name*='_p_comment']",
      "action": "fill",
      "value": "test"
