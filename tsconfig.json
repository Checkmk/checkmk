{
    "compilerOptions": {
        "target": "ES6",
        "types": [
            "node",
            "jquery"
        ],
        "typeRoots": [
            "./node_modules/@types"
        ],
        "strict": true,
        "strictNullChecks": true,
        "noImplicitAny": true,
        "noImplicitThis": false,
        "noImplicitOverride": true,
        "noImplicitReturns": true,
        "noUnusedParameters": true,
        "noEmit": true,
        "moduleResolution": "node",
        "esModuleInterop": false,
        "module": "CommonJS",
        "allowJs": false,
        "allowSyntheticDefaultImports": true,
        "baseUrl": "./",
        "paths": {
            "*": [
                "*",
                "web/*",
                "web/htdocs/js/modules/*",
                "web/htdocs/js/modules/*",
                "web/htdocs/js/modules/figures/*",
                "web/htdocs/js/modules/node_visualization/*",
                "web/htdocs/js/modules/cee/*",
                "web/htdocs/js/modules/cee/figures/*",
                "web/htdocs/js/modules/cee/license_usage/*",
                "web/htdocs/js/modules/cee/ntop/*"
            ]
        }
    },
    "include": [
        "./web/**/*",
    ],
    "exclude": [
        "node_modules"
    ]
}
