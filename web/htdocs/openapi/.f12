#!/bin/bash
set -e

SITE=${SITE:-$(until [ "${PWD}" = / ]; do if [ -e .site ]; then
    cat .site
    break
else cd ..; fi; done)}
SITE=${SITE:-$(omd sites --bare | head -n 1)}
ROOT=/omd/sites/$SITE

echo "OpenAPI f12d"
sudo cp index.html "$ROOT/share/check_mk/web/htdocs/openapi/"
sudo chmod 755 "$ROOT/share/check_mk/web/htdocs/openapi/"*
